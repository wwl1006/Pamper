<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.work.pamper.mapper.AccountMapper">
    <insert id="saveUser">
        INSERT INTO account (id,username,password,avatar,user_type,email,description,create_time
        ) VALUES (#{id},#{username},#{password},#{avatar},#{user_type},#{email},#{description},#{create_time})
    </insert>
    <select id="getUserByUsername" resultType="com.work.pamper.entity.Account">
        SELECT * FROM account WHERE username = #{username}
    </select>
    <select id="getUserById" resultType="com.work.pamper.entity.Account">
        SELECT * FROM account WHERE id = #{id}
    </select>
    <select id="getIdByUsername" resultType="java.lang.String">
        SELECT id FROM account WHERE username = #{username}
    </select>
    <update id="updateProfile">
        UPDATE account
        <set>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="avatar != null">
                avatar = #{avatar},
            </if>
        </set>
        WHERE id = #{id}
    </update>
</mapper>
